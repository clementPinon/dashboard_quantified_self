{
  // Author : Clement Pinon
  // mail : clement.pinon@gmail.com
  // ** PLEASE IF USED CHANGE WEBPROPERTY in popup.js and dash.js **

  "manifest_version": 2,

  "name": "Personal connected dashboard",
  "description": "This extension helps you monitoring the way and the frequency you browse the web",
  "version": "1.4", // add to favorite feature, red button and congrat mark, geolocation, plus uniqueID (cookie based)
  
  "icons": {
      "128": "img/dash.png"
  },

  "permissions": [
    "geolocation",
    "tabs", 
    "background",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],  

  "background": {
      "scripts": [ 
        "js/jQuery.js",
        "js/uniqueID.js",
        "js/geoLocation.js",
        "js/background.js"
        ],
      "persistent": false
   },

  //next step : https://developer.chrome.com/extensions/browsingData.html


  "browser_action": {
    "default_icon": "img/dash.png",
    "default_popup": "html/popup.html"
  }

}


