  // ** PLEASE IF USED CHANGE WEBPROPERTY in popup.js and dash.js **
  
  //http://developer.chrome.com/extensions/overview.html

  "manifest_version": 2,

  "name": "Personal connected dashboard",
  "description": "This extension helps you monitoring the way and the frequency you browse the web",
  "version": "1.3", // add to favorite feature, red button and congrat mark, geolocalization
  "background" : {
    "page" : "background.html",
    "persistent" : false
  },

  "permissions": [
    "tabs", 
    "background",
    "geolocation", 
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],  
  //next step : https://developer.chrome.com/extensions/browsingData.html

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["jQuery.js","dash.js", "geoLocation.js", "test_uniqueID.js"]
    }
  ],

  "browser_action": {
    "default_icon": "dash.png",
    "default_popup": "popup.html"
  }

}


