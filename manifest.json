  // ** PLEASE IF USED CHANGE WEBPROPERTY in popup.js and dash.js **

  "manifest_version": 2,

  "name": "Personal connected dashboard",
  "description": "This extension helps you monitoring the way and the frequency you browse the web",
  "version": "1.3", // add to favorite feature, red button and congrat mark, geolocalization
  
  "icons": {
      "128": "img/dash.png"
  },

  "permissions": [
    "geolocation",
    "tabs", 
    "background",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],  

  "background": {
      "scripts": [ 
        "js/jQuery.js",
        "js/geoLocation.js",
        "js/background.js"
        ],
      "persistent": false
   },

  //next step : https://developer.chrome.com/extensions/browsingData.html

  //content script deactivated
  "content_scripts": [
    {
      "js": ["js/jQuery.js"], //,"js/dash.js","js/geoLocation.js","js/background.js","js/test_uniqueID.js"],
      "matches": ["http://*/*","https://*/*"]
    }
  ],

  "browser_action": {
    "default_icon": "img/dash.png",
    "default_popup": "html/popup.html"
  }

}


